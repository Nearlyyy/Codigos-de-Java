11. Ordenamiento por Selecci√≥n

    
    public static void seleccion (int[] numeros){
        int indiceMin, auxiliar, n = numeros.length;
        
        for (int i = 0; i < n - 1; i++) {
            indiceMin = i;
            
            for (int j = i + 1; j < n; j++) {
                if (numeros[j] < numeros[indiceMin]) {
                    indiceMin = j;
                }
            }
            
            auxiliar = numeros[indiceMin]; 
            numeros[indiceMin] = numeros[i];
            numeros[i] = auxiliar;
        }
    }
